<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="0dp"
    tools:context="com.lxy.whv.ui.profile.AboutActivity">


    <ImageView
        android:id="@+id/about_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/webview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/about_versionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:text=""
        android:textSize="18sp" />

    <TextView
        android:id="@+id/about_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_versionName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="12dp"
        android:text="@string/about_info_text1"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_about"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:text="@string/about_info_text2"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_douniwan"
        style="@style/My.Button.theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:text="@string/about_button_text1" />
    
</RelativeLayout>
