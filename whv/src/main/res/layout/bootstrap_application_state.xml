<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lxy.test.whv.ui.bootstrap.BootstrapActivity">

    <TextView
        android:id="@+id/application_state_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/bootstrap_application_state_tip"
        android:textSize="22sp" />

    <RadioGroup
        android:id="@+id/radiogroup_application_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <RadioButton
            android:id="@+id/radiobutton_want_to_know"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:padding="10dp"
            android:text="@string/bootstrap_state_want_to_know"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radiobutton_preparing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/bootstrap_state_preparing"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radiobutton_submiting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/bootstrap_state_submiting"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radiobutton_granted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/bootstrap_state_granted"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radiobutton_abroad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/bootstrap_state_abroad"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radiobutton_returned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/bootstrap_state_returned"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radiobutton_pr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/bootstrap_state_pr"
            android:textSize="20sp" />

    </RadioGroup>

    <Button
        android:id="@+id/button_application_state_submit"
        style="@style/My.Button.theme"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_gravity="center_horizontal"
        android:text="@string/bootstrap_state_submit" />


</LinearLayout>
