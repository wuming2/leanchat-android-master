<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/all_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_bg_color"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/head_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_person_info_about_top_bg"
            android:paddingLeft="16dp"
            android:paddingRight="10dp">

            <TextView
                style="@style/My.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="@string/chat_common_avatar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avatar_view"
                    style="@style/My.ImageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="10dp"
                    android:src="@drawable/chat_default_user_avatar" />

                <ImageView
                    android:id="@+id/avatar_arrow"
                    style="@style/My.ImageView"
                    android:layout_width="20dp"
                    android:contentDescription="@string/profile_settings"
                    android:src="@drawable/common_view_right_arrow_pic" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_person_info_mid_bg"
            android:padding="16dp">

            <TextView
                style="@style/My.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="@string/contact_account" />

            <TextView
                android:id="@+id/username_view"
                style="@style/My.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_person_info_mid_bg"
            android:padding="16dp">

            <TextView
                style="@style/My.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="@string/contact_gender" />

            <TextView
                android:id="@+id/contact_gender_tv"
                style="@style/My.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_person_info_mid_bg"
            android:padding="16dp">

            <TextView
                style="@style/My.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="@string/contact_age" />

            <TextView
                android:id="@+id/contact_age_tv"
                style="@style/My.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_person_info_mid_bg"
            android:padding="16dp">

            <TextView
                style="@style/My.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="@string/contact_state" />

            <TextView
                android:id="@+id/contact_state_tv"
                style="@style/My.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_aboutme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_person_info_mid_bg"
            android:padding="16dp">

            <TextView
                style="@style/My.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="@string/contact_aboutme" />

            <TextView
                android:id="@+id/contact_aboutme_tv"
                style="@style/My.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_social_wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/contact_person_info_mid_bg"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                style="@style/My.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="@string/contact_wechat" />

            <TextView
                android:id="@+id/contact_wechat_tv"
                style="@style/My.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_social_weibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_person_info_mid_bg"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                style="@style/My.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="@string/contact_weibo" />

            <TextView
                android:id="@+id/contact_weibo_tv"
                style="@style/My.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_social_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_person_info_mid_bg"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                style="@style/My.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="@string/contact_line" />

            <TextView
                android:id="@+id/contact_line_tv"
                style="@style/My.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp" />
        </RelativeLayout>


        <Button
            android:id="@+id/addFriendBtn"
            style="@style/My.Button.theme"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/contact_add_friend"
            android:visibility="gone" />

        <Button
            android:id="@+id/chatBtn"
            style="@style/My.Button.theme"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/contact_chat" />

        <Button
            android:id="@+id/deleteBtn"
            style="@style/My.Button.theme"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="10dp"
            android:text="@string/contact_info_delete"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>