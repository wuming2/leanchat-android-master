<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="com.lxy.test.whv.ui.discover.CompanyPostActivity">

    <RelativeLayout
        android:id="@+id/discover_company_ll_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:padding="15dp">

        <TextView
            android:id="@+id/company_post_title"
            style="@style/My.TextView._Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ll_poster_info"
            android:maxLines="1"
            android:text="title"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/company_time_destination_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_post_title"
            android:layout_toLeftOf="@+id/ll_poster_info"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/company_post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="time"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/company_post_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:text="destination"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/company_post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_time_destination_ll"
            android:layout_toLeftOf="@+id/ll_poster_info"
            android:text="content"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/company_post_posttime"
            style="@style/My.TextView._Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_post_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:text="posttime"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll_poster_info"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatar_view"
                style="@style/My.ImageView.Photo_Avatar"
                android:layout_marginLeft="8dp"
                android:src="@drawable/chat_default_user_avatar" />

            <TextView
                android:id="@+id/company_post_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:text="name"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>

    <com.lxy.test.whv.ui.view.BaseListView
        android:id="@+id/company_post_comment_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/discover_company_ll_post_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_post_comment"
            style="@style/My.Button.theme"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="9dp"
            android:text="@string/company_post_comment" />
    </LinearLayout>

</LinearLayout>
