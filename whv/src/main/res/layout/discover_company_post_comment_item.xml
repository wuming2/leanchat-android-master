<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:minHeight="@dimen/common_list_item_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar_view"
            style="@style/My.ImageView.Photo_Avatar"
            android:layout_marginLeft="8dp"
            android:src="@drawable/chat_default_user_avatar" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            android:paddingTop="2dp">

            <TextView
                android:id="@+id/content_text"
                style="@style/My.TextView._Black"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text=""
                android:textSize="18sp" />

            <TextView
                android:id="@+id/distance_text"
                style="@style/My.TextView._Gray"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/comment_time_text"
                style="@style/My.TextView._Gray"
                android:layout_below="@id/content_text"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="你好"
                android:textSize="13sp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>

